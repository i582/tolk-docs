{
    "name": "tolk-docs",
    "license": "CC-BY-4.0",
    "version": "0.0.1",
    "scripts": {
        "dev": "astro dev",
        "build": "yarn clean && yarn fmt && yarn spell && astro check && astro build",
        "clean": "rm -rf dist/ out/ .astro/",
        "preview": "astro preview",
        "astro": "astro",
        "fmt": "prettier --write -l --cache .",
        "fmt:check": "prettier --check --cache .",
        "spell": "cspell --no-progress src/content/docs",
        "lint:all": "yarn fmt:check && yarn spell",
        "precommit": "yarn fmt && yarn build"
    },
    "dependencies": {
        "@astrojs/check": "0.9.4",
        "@astrojs/markdown-remark": "5.3.0",
        "@astrojs/react": "^4.3.0",
        "@astrojs/starlight": "0.29.3",
        "@codemirror/basic-setup": "^0.20.0",
        "@codemirror/commands": "^6.8.1",
        "@codemirror/history": "^0.19.2",
        "@codemirror/language": "^6.11.2",
        "@codemirror/lint": "^6.8.5",
        "@codemirror/search": "^6.5.11",
        "@codemirror/state": "^6.5.2",
        "@codemirror/theme-one-dark": "^6.1.3",
        "@codemirror/view": "^6.38.1",
        "@ton/core": "^0.61.0",
        "@ton/crypto": "^3.3.0",
        "@ton/sandbox": "^0.35.1",
        "@ton/tolk-js": "^1.0.0",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "astro": "4.16.18",
        "buffer": "^6.0.3",
        "cspell": "^8.14.4",
        "esbuild": "^0.25.8",
        "hast-util-to-string": "^3.0.0",
        "prettier": "3.4.2",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "rehype-autolink-headings": "7.1.0",
        "remark": "^15.0.1",
        "remark-custom-heading-id": "2.0.0",
        "sharp": "0.32.6",
        "starlight-links-validator": "^0.12.1",
        "starlight-llms-txt": "^0.5.0",
        "starlight-theme-rapide": "^0.2.1",
        "typescript": "^5.6.2",
        "unist-util-visit": "^5.0.0"
    },
    "resolutions": {
        "esbuild": "^0.25.0"
    },
    "overrides": {
        "esbuild": "^0.25.0"
    },
    "packageManager": "yarn@1.22.22",
    "prettier": {
        "arrowParens": "avoid",
        "bracketSpacing": false,
        "printWidth": 100,
        "semi": false,
        "singleQuote": false,
        "tabWidth": 4,
        "trailingComma": "all",
        "useTabs": false,
        "overrides": [
            {
                "files": [
                    "*.yaml",
                    "*.yml"
                ],
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    }
}
